<h1>My Applications
  <%= link_to "New Application", new_registered_application_path, class: 'btn btn-primary' %>
</h1>


<div class="jumbotron">
  <div class="row">
    <div class="col-md-8">

      <% @registered_applications.each do |app| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to app.name, app.url %>
              <small>
                <%= link_to "Edit or Delete", registered_application_path(app), class: 'btn btn-danger pull-right' %>
                <%= link_to "See Events!", registered_application_path(app), class: 'btn btn-success pull-right' %>
              </small>
            </h4>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
