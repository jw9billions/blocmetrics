<h1>My applications</h1>

<div class="jumbotron">
<div class="row">
  <div class="col-md-8">
    <div class = 'container' >
      <%= link_to "New Application", new_registered_application_path, class: 'btn btn-primary pull-right' %>
    </div>
    <br>

    <% if current_user.registered_applications.any? %>
      <% @registered_applications.each do |app| %>

        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to app.name, app.url %>
              <small>
                <%= link_to "Edit or Delete", registered_application_path(app), class: 'btn btn-success pull-right' %>
              </small>
            </h4>
          </div>
        </div>

      <% end %>
    <% end %>

  </div>
</div>
</div>
